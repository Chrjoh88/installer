function f_rkhunter {
  echo "[$i] Enable rkhunter & chkrootkit"

  sed -i 's/^CRON_DAILY_RUN=.*/CRON_DAILY_RUN="yes"/' "$RKHUNTERCONF"
  sed -i 's/^APT_AUTOGEN=.*/APT_AUTOGEN="yes"/' "$RKHUNTERCONF"

  
  sed -i 's/^RUN_DAILY=_*/RUN_DAILY="true"/ "$CHKROOTCONF"
  sed -i 's/^DIFF_MODE=_*/DIFF_MODE="true"/ "$CHKROOTCONF"
  rkhunter --propupd
  chkrootkit -V

  ((i++))
}
